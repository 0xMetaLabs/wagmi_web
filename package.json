{
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --watch --mode=development",
    "clean": "rm -Rf assets typescript/build",
    "test": "npx jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/typescript/tests/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@wagmi/connectors": "^5.10.0",
    "@wagmi/core": "^2.21.0",
    "@reown/appkit": "^1.8.6",
    "@reown/appkit-adapter-wagmi": "^1.8.6",
    "viem": "^2.37.6"
  }
}